{% extends 'baseAdmin.html.twig' %}

{% block title %}Hello ProduitController!{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>




<div class="row">

    {% for produit in produits %}
        
   
    <div class="col-4 ">
        <div class="card m-2">

            <div class="card-header">
                <img src="{{asset('/produits/' ~ produit.image )}}" height="100%" width="100%" alt="">    
            </div>
            <div class="card-body">
                <h2>  <i>{{produit.titre}}</i></h2>
                 <ul>
                    <li>
                            <b>{{produit.prix}} TND</b>

                    </li>
                    <li>{{produit.description}}</li>
                    <li>  <p style="color: rgba(0, 0, 0, 0.601);" >{{produit.createdat |date(' Y-M-D')}}</p> </li>
                     
                 </ul>

            </div>
            <div class="card-footer">
                <a class="btn btn-secondary" href="">Show</a>
                <a class="btn btn-secondary" href="">Edit</a>
            </div>
        </div>
       

    </div>

    {% endfor %}


</div>






    <a href="/produit/add" class="btn btn-primary">Ajouter un Produit</a>


{% endblock %}